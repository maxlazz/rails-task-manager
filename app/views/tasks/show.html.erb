<h1>Task Details</h1>

<p><%= @task.title %></p>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<%= link_to 'Delete',
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
<%= link_to 'Back to list', tasks_path %>
<%= link_to 'Edit task', edit_tasks_path(@task.id) %>
